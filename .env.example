# AVS Oracle Hook Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Ethereum Network Configuration
# =============================================================================

# Mainnet
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
MAINNET_PRIVATE_KEY=0x...

# Testnet (Holesky)
TESTNET_RPC_URL=https://holesky.infura.io/v3/YOUR_API_KEY
TESTNET_PRIVATE_KEY=0x...

# Local Development
ANVIL_RPC_URL=http://localhost:8545
ANVIL_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# =============================================================================
# Contract Addresses
# =============================================================================

# Deployed contract addresses (will be filled after deployment)
AVS_ORACLE_HOOK_ADDRESS=
ORACLE_AVS_SERVICE_MANAGER_ADDRESS=
POOL_MANAGER_ADDRESS=

# =============================================================================
# EigenLayer Configuration
# =============================================================================

# EigenLayer Core Contracts
EIGENLAYER_DELEGATION_MANAGER_ADDRESS=
EIGENLAYER_AVS_DIRECTORY_ADDRESS=
EIGENLAYER_REGISTRY_COORDINATOR_ADDRESS=
EIGENLAYER_STAKE_REGISTRY_ADDRESS=

# AVS Configuration
AVS_NAME=AVS-Oracle-Hook
AVS_METADATA_URI=https://avs-oracle-hook.xyz/metadata.json
AVS_QUORUM_THRESHOLD_PERCENTAGE=66

# =============================================================================
# Oracle Configuration
# =============================================================================

# Price Feed Sources
BINANCE_API_KEY=your_binance_api_key
COINBASE_API_KEY=your_coinbase_api_key
KRAKEN_API_KEY=your_kraken_api_key

# Oracle Parameters
DEFAULT_CONSENSUS_THRESHOLD=6600
DEFAULT_MAX_PRICE_DEVIATION=500
DEFAULT_MIN_STAKE_REQUIRED=10000000000000000000
DEFAULT_MAX_STALENESS=300

# =============================================================================
# Operator Configuration
# =============================================================================

# Operator Identity
OPERATOR_PRIVATE_KEY=0x...
OPERATOR_ADDRESS=
OPERATOR_WEBSITE=https://your-operator.xyz
OPERATOR_DESCRIPTION=AVS Oracle Hook Operator

# Stake Configuration
MIN_STAKE_AMOUNT=10000000000000000000
MAX_STAKE_AMOUNT=1000000000000000000000

# =============================================================================
# Monitoring & Analytics
# =============================================================================

# Monitoring Services
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# Security Configuration
# =============================================================================

# Slashing Configuration
SLASH_PERCENTAGE=100
DISPUTE_TIMEOUT=86400

# Access Control
ADMIN_ADDRESS=
PAUSER_ADDRESS=
UPGRADER_ADDRESS=

# =============================================================================
# Development Configuration
# =============================================================================

# Gas Configuration
GAS_LIMIT=30000000
GAS_PRICE=20000000000

# Testing
FORK_BLOCK_NUMBER=latest
FORK_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# =============================================================================
# External Services
# =============================================================================

# The Graph
SUBGRAPH_ENDPOINT=https://api.thegraph.com/subgraphs/name/your-org/avs-oracle-hook

# IPFS
IPFS_ENDPOINT=https://ipfs.infura.io:5001
IPFS_PROJECT_ID=your_ipfs_project_id
IPFS_PROJECT_SECRET=your_ipfs_project_secret

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
ENABLE_PRICE_MANIPULATION_DETECTION=true
ENABLE_AUTOMATIC_SLASHING=true
ENABLE_OPERATOR_REWARDS=true
ENABLE_CONSENSUS_MONITORING=true

# =============================================================================
# Backup & Recovery
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=30

# Recovery Configuration
RECOVERY_MODE=false
RECOVERY_PRIVATE_KEY=0x...
